@model Blog
@{
    ViewData["Title"] = "Details";
}
<div class="container mt-3">
    <div class="row">
        <div class="col-md-9">
            <div class="card mb-3">
                <h5 class="card-header">@Model.Category.Name</h5>
                <img src="~/img/@Model.Image" class="card-img-top" alt="@Model.Title">
                <div class="card-body">
                    <h4 class="card-title">@Html.Raw(Model.Title)</h4>
                    <p class="card-text">@Html.Raw(Model.Body)</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <partial name="_SearchBox" />
            @await Component.InvokeAsync("CategoryMenu")
        </div>

    </div>
</div>


