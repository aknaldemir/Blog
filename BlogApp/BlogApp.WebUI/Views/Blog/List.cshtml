@*@using System.ComponentModel.DataAnnotations.Schema*@
@model IEnumerable<Blog>
@{
    ViewData["Title"] = "List";
    Layout = "_AdminLayout";
}

<div class="container mt-3">
    <h2>Blog List</h2> 
    <hr />
    <a asp-controller="Blog" asp-action="Create" class="btn btn-secondary">Create Blog</a>
    <hr />
    <div class="row">
        <div class="col">
            @if (Model.Count() > 0)
            {
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Date</th>
                            <th>IsApproved</th>
                            <th>IsHome</th>
                            <th>IsSlider</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                        <tr>
                            <td>@item.BlogId</td>
                            <td>
                                <img width="100" src="~/img/@item.Image" alt="@item.Title" />
                            </td>
                            <td>@item.Title</td>
                            <td>@item.DateTime</td>
                            <td>
                                @if (item.IsApproved)
                                {

                                    <i class="fas fa-check-circle"></i>
                                }
                                else
                                {

                                    <i class="fas fa-times-circle"></i>
                                } 
                            </td>
                            <td>
                                @if (item.IsHome)
                                {

                                    <i class="fas fa-check-circle"></i>
                                }
                                else
                                {

                                    <i class="fas fa-times-circle"></i>
                                }  
                            </td>
                            <td>
                                @if (item.IsSlider)
                                {

                                    <i class="fas fa-check-circle"></i>
                                }
                                else
                                {

                                    <i class="fas fa-times-circle"></i>
                                }  
                            </td>

                            <td>
                                <a asp-controller="Blog" asp-action="Edit" asp-route-id="@item.BlogId" class="btn btn-primary btn-sm">Edit</a>
                                <a asp-controller="Blog" asp-action="Delete" asp-route-id="@item.BlogId" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>

                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-danger">
                    Blog Eklenmemiş.
                </div>
            }     
            
           
        </div>
    </div>
</div>

