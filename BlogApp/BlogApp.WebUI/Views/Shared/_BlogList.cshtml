@model IEnumerable<Blog>



@if (Model.Count() > 0)
{
    @foreach (var item in Model)
    {
        <div class="col-md-6 float-left">
            <div class="card mb-3">
                <img src="~/img/@item.Image" class="card-img-top" alt="@item.Title">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Description</p>
                    <a asp-action="Details" asp-controller="Home" asp-route-id="@item.BlogId" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="col">
        <div class="alert alert-info">Blog bulunamadı.</div>
    </div>
}

